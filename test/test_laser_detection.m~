clear all;
close all;

%% Open the image and get laser channel, red in this case
I = imread('test_image.jpg');
red_ch = double(I(:,:,1)) / 255.0;

%% Create the convolution
kernel_size = 11;
kernel = [0.000003	0.000229	0.005977	0.060598	0.24173	0.382925	0.24173	0.060598	0.005977	0.000229	0.000003];
c = conv2(red_ch,kernel);


%% Get peak values and show
figure(2)
imshow(I);
hold on;
[max_vals, indices] = max(c, [], 2);
peaks = [];
for i=1:size(I,1)
  j =  indices(i)-(kernel_size-1)/2;
  % Detect only high values for laser
  if red_ch(i, j) > 0.8
    plot(j, i, 'rx')
    peaks = [peaks; i j];
  end
end

%% Get subpixel accuracy
% Compute the weight mass centre of the surrounding pixels
window_size = 7;
% for each detected peak:
new_peaks = [];
for i=1:size(peaks)
  mx = 0;
  m = 0;
  row = peaks(i, 1);
  col = peaks(i, 2);
  for k=-(window_size-1)/2:(window_size+1)/2
    if (col + k > size(red_ch,2))
      continue
    end
    if (col + k < 0)
      continue
    end
    value = red_ch(row, col+k);
    mx = mx + value*k;
    m = m + value;
  end
  new_peak_column = col + mx / m;
  new_peaks = [new_peaks; i new_peak_column];
  plot(new_peak_column, i, 'go')
end

%% show a random row to see if we're OK!
figure(1)
plot(red_ch(peaks(100,1), :)); hold on
xlabel('X pixel') 
ylabel('Convolution response')
title('Convolution result')
val = red_ch(peaks(100,1), peaks(100,2));
plot(peaks(100,2),val, 'rx','MarkerSize', 20);
plot(new_peaks(100,2),val, 'go','MarkerSize', 20);
legend('Image signal', 'Peak', 'Peak with subpixel')